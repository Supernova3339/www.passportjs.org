.rw-wrapper
  position: relative;

.rw-words-1
  position relative
  span
    position: absolute;
    opacity: 0;
    overflow: hidden;
    -webkit-animation: rotateWord 24s linear infinite 0s;
    animation: rotateWord 24s linear infinite 0s;

    &:nth-child(2)
      -webkit-animation-delay: 3s;
      animation-delay: 3s;

    &:nth-child(3)
      -webkit-animation-delay: 6s;
      animation-delay: 6s;

    &:nth-child(4)
      -webkit-animation-delay: 9s;
      animation-delay: 9s;

    &:nth-child(5)
      -webkit-animation-delay: 12s;
      animation-delay: 12s;

    &:nth-child(6)
      -webkit-animation-delay: 15s;
      animation-delay: 15s;

    &:nth-child(7)
      -webkit-animation-delay: 18s;
      animation-delay: 18s;
      
    &:nth-child(8)
      -webkit-animation-delay: 21s;
      animation-delay: 21s;

