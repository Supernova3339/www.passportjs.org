.alert {
  padding: 10px
  margin-bottom: 20px
  border-width: 1px
  border-style: solid
  border-radius: 3px;
}

.alert:before {
  content: "";
  display: block;
  width: 20px;
  height: 20px;
  float: left;
  margin: 6px 2px 0 0;
}

.alert-success {
  color: black;
