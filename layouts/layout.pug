include mixins/analytics
include mixins/verification

doctype html
html(prefix='og: http://ogp.me/ns#', lang='en')
  head
    block title
      title= title
    meta(charset="utf-8")
    block description
      if description
        meta(name='description', content=description)
    if author && author.name
      meta(name='author', text=author.name)
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    link(rel="canonical", href=canonicalURL)

    +web-app(manifest, '/manifest.webmanifest')
    +ios-web-app(manifest)
    +windows-web-app(manifest, '/browserconfig.xml')

    block opengraph-metadata
      +opengraph-metadata(title, description, images, author, type, canonicalURL, manifest)
    block twitter-metadata
      +twitter-metadata(title, description, images, author, canonicalURL, manifest)
    
    +verifications()
    +google-analytics('UA-73332146-2')
    //+google-tag-manager('GTM-M5S3PH')

    //- CSS
    //link(type='text/css', rel='stylesheet', href='http://fast.fonts.net/cssapi/7527d73a-ebfe-45db-a201-ff2812df4b18.css')
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.5/styles/default.min.css')
    link(rel='stylesheet', href='/assets/styles/all.css')
    
    script(data-main='/script/main' src='//cdnjs.cloudflare.com/ajax/libs/require.js/2.3.5/require.js')

    != LRScript
  body
    #container
      span#top
      #toolbar
        .toolbar-search
          form(action='/search')
            button(type='submit')
            input(type='text', name='q', placeholder='Search for Strategies')

        .toolbar-social
          ul
            li.facebook
              a(href='https://www.facebook.com/passportjs', target='_blank')
            li.twitter
              a(href='https://twitter.com/passportjs', target='_blank')
            li.github
              a(href='https://github.com/jaredhanson/passport', target='_blank')
                span.count 0


      nav#menu
        a(href='/', title='Passport.js').menu-logo
        .menu-trigger
          span
        .menu-items
          ul
            li(class=(title === 'Passport.js' ? 'active' : ''))
              a(href='/') Home
            li(class=(title === 'Documentation' ? 'active' : ''))
              a(href='/docs/') Documentation
            li(class=(title === 'Features' ? 'active' : ''))
              a(href='/features/') Features
            li
              a(href='/packages/') Strategies
            li(class=(title === 'Sponsors' ? 'active' : ''))
              a(href='/sponsors/') Sponsors

          <script async type="text/javascript" src="//cdn.carbonads.com/carbon.js?zoneid=1673&serve=C6AILKT&placement=passportjsorg" id="_carbonads_js"></script>


      #content
        block content

    .search-con
      .head
        span.close-ico
        .hold
          h2 SEARCH FOR STRATEGIES
          form(action='/')
            input(value='', type='text', name="strategy" placeholder="Start typing", autocomplete="off")
          p.info-line
            span 0
            | STRATEGIES
      .results
        section

